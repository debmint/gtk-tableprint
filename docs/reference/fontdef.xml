<chapter id='xmlfontdef'><title>Font Definition</title>
  <para>
    font:: ()
  </para>
  <para>
    <table frame='all'><title>Attributes</title>
      <tgroup cols='3' align='left' colsep='1' rowsep='1'>
        <thead>
          <row>
            <entry>Name</entry>
            <entry>Type</entry>
            <entry>Default</entry>
          </row>
        </thead>
        <tbody>
          <row>
            <entry>family</entry>
            <entry>CDATA</entry>
            <entry>&lt;none&gt;</entry>
          </row>
          <row>
            <entry>size</entry>
            <entry>CDATA</entry>
            <entry></entry>
          </row>
          <row>
            <entry>style</entry>
            <entry>
              <simplelist>
                <member><emphasis>Enumeration</emphasis></member>
                <member>normal</member>
                <member>oblique</member>
                <member>italic</member>
              </simplelist>
            </entry>
            <entry>
            </entry>
          </row>
          <row>
            <entry>weight</entry>
            <entry>
              <simplelist>
                <member><emphasis>Enumeration</emphasis></member>
                <member>thin</member>
                <member>ultralight</member>
                <member>light</member>
                <member>book</member>
                <member>normal</member>
                <member>medium</member>
                <member>semibold</member>
                <member>bold</member>
                <member>heavy</member>
                <member>ultraheavy</member>
              </simplelist>
            </entry>
            <entry>
            </entry>
          </row>
          <row>
            <entry>variant</entry>
            <entry>
              <simplelist>
                <member><emphasis>Enumeration</emphasis></member>
                <member>normal</member>
                <member>small-caps</member>
              </simplelist>
            </entry>
            <entry>
            </entry>
          </row>
          <row>
            <entry>stretch</entry>
            <entry>
              <simplelist>
              <member><emphasis>Enumeration</emphasis></member>
              <member>ultra-condensed</member>
              <member>extra-condensed</member>
              <member>condensed</member>
              <member>semi-condensed</member>
              <member>normal</member>
              <member>semi-expanded</member>
              <member>expanded</member>
              <member>extra-expanded</member>
              <member>ultra-expanded</member>
              </simplelist>
